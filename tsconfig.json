{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "jsx": "react",
      "outDir": "./build",
      "sourceMap": true,
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "ts-server/**/*.ts",
      "ts-server/**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  