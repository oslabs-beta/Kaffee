// Added from the redux template https://github.com/reduxjs/redux-templates/blob/master/packages/cra-template-redux-typescript/tsconfig.json
// module and moduleResolution may require extra reading at:
// https://stackoverflow.com/questions/71463698/why-we-need-nodenext-typescript-compiler-option-when-we-have-esnext#:~:text=The%20biggest%2C%20most%20noticeable%20difference,because%20there%20is%20no%20such

{
  "compilerOptions": {
    "target": "ESNext", // Target ESNext version
    "module": "esnext", // Use ES modules
    "jsx": "react-jsx", // Enable JSX for React
    "allowJs": true, // Allow TypeScript to compile JavaScript files
    "outDir": "build", // Output directory for compiled code
    "sourceMap": true, // Generate source maps
    "rootDir": "./", // Root directory of the project
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "noEmit": false, // Do not emit compiled output (we'll fix this)
    "types": ["webpack-env", "node"], // Include Webpack environment types
    "lib": ["dom", "dom.iterable", "ESNext"], // Include standard libraries
    "allowSyntheticDefaultImports": true, // Allow synthetic default imports
    "resolveJsonModule": true, // Enable importing JSON modules
    "isolatedModules": true // Each file is treated as a separate module
  },
  "include": [
    "src/**/*.ts",    // Include TypeScript files
    "src/**/*.tsx",   // Include TypeScript React files
    "ts-server/**/*.ts", // Include backend TypeScript files
    "ts-server/**/*.tsx", // Include backend TypeScript React files
    "src/**/*.js",    // Include JavaScript files
    "src/**/*.jsx",   // Include JavaScript React files
    "src/**/*.json",  // Include JSON files
    "src/**/*.css",   // Include CSS files
    "src/**/*.scss",  // Include SCSS files
    "src/**/*.sass",  // Include Sass files
    "src/**/*.png",   // Include image files (adjust extensions as needed)
    "src/**/*.jpg",   // Include image files (adjust extensions as needed)
    // Add more patterns for other file types if necessary
  ],
  "exclude": ["node_modules", "java-server"] // Exclude node_modules directory
}
