{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "react",
    "allowJs": true,
    "outDir": "./build",
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["webpack-env"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "ts-server/**/*.ts",
    "ts-server/**/*.tsx",
    "src/redux/store.js",
    "src/containers/Clusters.jsx",
    "src/containers/Main.jsx",
    "src/reducers/clusterSlice.js"
  ],
  "exclude": ["node_modules"]
}
